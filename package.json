{
  "name": "pm2-amqp-logstash",
  "version": "0.4.13",
  "description": "Forward PM2 logs via a AMQP stream ready for Logstash",
  "main": "app.js",
  "dependencies": {
    "pm2": "^2.4.3",
    "pmx": "^1.1.0",
    "bunyan": "^1.8.9",
    "bunyan-logstash-amqp": "^1.0.7",
    "parse_scala_log": "^1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Franco-Poveda/pm2-amqp-logstash.git"
  },
  "config": {
    "amqpPort": 3001,
    "amqpHost": "localhost",
    "amqpVhost": "/",
    "amqpUser": "guest",
    "amqpPasswd": "guest",
    "amqpExchange": "amq.fanout",
    "amqpRoutingKey": "test",
    "logLevel": "debug",
    "logName": "log-stream"
  },
  "apps": [
    {
      "merge_logs": true,
      "max_memory_restart": "350M",
      "script": "app.js"
    }
  ],
  "author": "Franco Poveda [at] Olpays.com",
  "license": "MIT"
}
